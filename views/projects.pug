//- require data:
    projects = { "id": { name, language, time, demoURL, githubURL, description, details, demoPics: [title, src] }, ...}

html(lang="en")
    head
        meta(charset="UTF-8")
        title My Projects | Frances's Website
        link(rel="stylesheet" type="text/css" href="/css/projects.css")
        link(rel="icon" href="/images/mainIcon.png")

    body
        include ./partials/navbar

        #main
            each project, id in projects
                .project
                    .label Name: 
                        .name #{project.name}
                    .label URL: 
                        if project.demoURL
                            a.url(href=`${project.demoURL}` target="_blank") Demo
                            | &nbsp; &nbsp;
                        if project.githubURL
                            a.url(href=`${project.githubURL}` target="_blank") GitHub
                    .label Language: 
                        .language #{project.language}
                    .label Time: 
                        .time #{project.time}
                    .label Screenshots:
                    .demo(id=`demo-${id}`)
                        each pic, picId in project.demoPics
                            img.demo-pic(src=`${pic.src}` alt=`${pic.title}` onclick=`displayModal("${id}", "${picId}")`)
                    .label Description: 
                        .description !{project.description}
                    .label Details: 
                        .details !{project.details}

            #demo-modal
                span#modal-close(onclick="closeModal()") Ã—
                img#modal-pic
                #modal-caption
                #modal-prev-next

        script(src=`/js/projects.js`)
        script.
            document.getElementById("projects-page").classList.add("chosen-page");